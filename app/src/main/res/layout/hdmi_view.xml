<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_ac_hdmi_nosignal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#ffffff"
            android:textSize="64sp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/home_ac_hdmi_textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textViewState"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="#7f000000"
        android:padding="5dp"
        android:text="HDMI_PHY_CONNECT"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewMsg"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#7f000000"
        android:padding="5dp"
        android:text="PLAY PRESSED"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/textViewState"
        android:layout_alignBottom="@+id/textViewState"
        android:layout_toEndOf="@+id/textViewState" />

    <TextView
        android:id="@+id/textViewErr"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#7f000000"
        android:padding="5dp"
        android:text="PLAY PRESSED"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/textViewMsg"
        android:layout_alignBottom="@+id/textViewMsg"
        android:layout_toEndOf="@+id/textViewMsg" />

</RelativeLayout>
