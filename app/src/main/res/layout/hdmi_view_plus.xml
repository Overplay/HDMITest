<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_ac_hdmi_nosignal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#ffffff"
            android:textSize="64sp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/home_ac_hdmi_textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/debugViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewStateLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="STATE"
            android:textColor="#f9a825"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewState"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewStateLabel"
            android:layout_alignStart="@+id/textViewStateLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMsgLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewStateLabel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="MESSAGES"
            android:textColor="#f9a825"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewMsg"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMsgLabel"
            android:layout_alignStart="@+id/textViewMsgLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textViewErrLabel"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewMsgLabel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="#bf000000"
            android:padding="10dp"
            android:text="ERRORS"
            android:textColor="#f9a825"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewErr"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewErrLabel"
            android:background="#7f000000"
            android:padding="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignStart="@+id/textViewErrLabel" />

        </RelativeLayout>

</RelativeLayout>
